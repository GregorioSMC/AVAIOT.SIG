@using Radzen
@using Radzen.Blazor

@* <nav class="navbar navbar-expand-md navbar-light bg-light mb-4"> *@

<nav class="navbar navbar-expand-md navbar-dark" style="background-color: #6d0c2e; color:white">
    <div class="container-fluid">
        <a class="navbar-brand" href="Home">SIG</a>
        <button class="navbar-toggler @NavButtonCssClass" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                aria-controls="navbarCollapse" aria-label="Toggle navigation" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse @NavBarCssClass" id="navbarCollapse" @onclick="ToggleNavMenu">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
                <li class="nav-item">
                    <NavLink class="nav-link" href="RegistroDeBienes" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> BIENES MUEBLES
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="Home">
                        <span class="oi oi-plus" aria-hidden="true"></span> DOCUMENTO BASE
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="Home">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> INVENTARIOS
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="Home">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> RESGUARDOS
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="Home">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> INFORMACIÓN DEL ENTE
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="Home">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> INFORMACIÓN SISTEMA
                    </NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    private bool collapseNavMenu = true;
    private string? NavBarCssClass => collapseNavMenu ? null : "show";
    private string? NavButtonCssClass => collapseNavMenu ? "collapsed" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}