            <RadzenGridColumn TItem="RegistroDeBienes" Property="Situacion" Title="Situacion" />
            <RadzenGridColumn TItem="RegistroDeBienes" Property="NombreDependencia" Title="Dependecia" />
            <RadzenGridColumn TItem="RegistroDeBienes" Property="NombreDepartamento" Title="Departamento" />
