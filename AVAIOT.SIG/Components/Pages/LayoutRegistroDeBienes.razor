@page "/RegistroDeBienes"
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@using Radzen
@using Radzen.Blazor
@using AVAIOT.SIG.Components.Layout
@using global::SIG.ModeloDeNegocios.ModeloDeNegocios

<PageTitle>Registro de Bienes</PageTitle>

<div>
    <NavMenu />
</div>


<div class="container">
    <RadzenRow Gap="4rem" Class="rz-p-0 rz-p-lg-4">
        <RadzenColumn Size="12" SizeMD="12">
            <RadzenStack>
                <RadzenFieldset Text="Bienes Muebles">
                    <RadzenStack Gap="1rem">
                        <RadzenRow AlignItems="AlignItems.Center">
                            <RadzenColumn Size="12" SizeMD="9">
                                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Wrap="FlexWrap.Wrap" Gap="0.5rem">
                                    <RadzenButton ButtonStyle="ButtonStyle.Info" Icon="info" Text="Generar Etiqueta"></RadzenButton>
                                    <RadzenButton ButtonStyle="ButtonStyle.Info" Icon="info" Text="Filtros"></RadzenButton>
                                    <RadzenButton ButtonStyle="ButtonStyle.Info" Icon="info" Text="Carga Masiva"></RadzenButton>
                                    <RadzenButton ButtonStyle="ButtonStyle.Primary" Icon="info" Text="Nuevo Bien" Click="CrearNuevoBien"></RadzenButton>
                                </RadzenStack>
                            </RadzenColumn>
                        </RadzenRow>
                    </RadzenStack>
                </RadzenFieldset>

            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
